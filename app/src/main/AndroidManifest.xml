<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin untuk mengakses internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Izin untuk mengakses status jaringan -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appreservasi"
        tools:targetApi="31">

        <!-- Aktivitas Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Aktivitas Registrasi -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <!-- Aktivitas Dashboard -->
        <activity
            android:name=".DashboardActivity"
            android:exported="true" />

        <!-- Aktivitas Profile -->
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <!-- Aktivitas Lapangan -->
        <activity
            android:name=".LapanganActivity"
            android:exported="true" />

        <!-- Aktivitas Reservasi -->
        <activity
            android:name=".ReservasiActivity"
            android:exported="true" />

        <!-- Aktivitas Pembayaran -->
        <activity
            android:name=".PembayaranActivity"
            android:exported="true" />

        <!-- Aktivitas Favorit -->
        <activity
            android:name=".FavoritActivity"
            android:exported="true" />




    </application>
</manifest>
